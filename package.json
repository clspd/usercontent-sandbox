{
  "name": "usercontent-sandbox",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "postinstall": "only-allow pnpm && pnpm run install:deps",
    "install:deps": "pnpm run install:demo",
    "install:demo": "cd demo && pnpm install",
    "dev": "vite --port 5173",
    "build": "pnpm run build-only && pnpm run build:ucs-runtime && pnpm run build:demo",
    "build-only": "tsc && vite build",
    "build:ucs-runtime": "vite build --mode ucs-runtime",
    "build:demo": "cd demo && pnpm run build",
    "preview": "vite preview"
  },
  "devDependencies": {
    "esbuild": "0.25.12",
    "only-allow": "^1.2.2",
    "typescript": "~5.9.3",
    "vite": "npm:rolldown-vite@7.2.5"
  },
  "pnpm": {
    "overrides": {
      "vite": "npm:rolldown-vite@7.2.5"
    },
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
